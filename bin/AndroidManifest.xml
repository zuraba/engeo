<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ge.android.engeo"
      android:versionCode="13"
      android:versionName="1.3">

	<uses-permission android:name="android.permission.INTERNET" />
	    
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="11"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".Wordlist"
                  android:label="@string/app_name" android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<activity android:name=".Preferences" android:configChanges="orientation|keyboardHidden|locale"
			android:windowSoftInputMode="adjustResize"  />
	<activity android:name=".About" android:configChanges="orientation|keyboardHidden|locale" />
	<activity android:name=".DetailView" android:configChanges="locale"/>
    </application>    
</manifest>