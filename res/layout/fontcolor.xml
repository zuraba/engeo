<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/word_original"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="@color/black" android:paddingLeft="3dp" android:textStyle="bold" android:layout_marginLeft="3dp" android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/word_translate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="italic" android:layout_marginBottom="2dp"/>

</LinearLayout>